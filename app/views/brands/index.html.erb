<div class="card mb-4">
  <div class="card-body">
    <h1 class="card-title mb-4">All Brands</h1>

    <div class="table-responsive">
      <table class="table table-striped table-bordered align-middle" border = 1>
        <thead>
          <tr>
            <th>Logo</th>
            <th>Name</th>
            <th>Location</th>
            <th>Business Type</th>
            <th>Annual Revenue</th>
            <th>Description</th>
            <th>Requirements</th>
          </tr>
        </thead>
        <tbody>
          <% @list_of_brands.each do |a_brand| %>
            <tr>
              <td>
                <img
                  src="<%= a_brand.logo %>"
                  alt="<%= a_brand.name %> logo"
                  class="img-fluid"
                  style="max-width:100px;"
                >
              </td>
              <td>
                <a href="/brands/<%= a_brand.id %>">
                  <%= a_brand.name %>
                </a>
              </td>
              <td><%= a_brand.location %></td>
              <td><%= a_brand.business_type %></td>
              <td><%= a_brand.annual_revenue %></td>
              <td><%= a_brand.description %></td>
              <td><%= a_brand.requirements %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
